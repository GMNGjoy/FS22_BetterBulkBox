            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#startFillType" value="OAT" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#capacity" value="1500" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(0).fillUnits.fillUnit(0)#startFillLevel" value="1500" />

            <!-- set the proper parent Box file -->
            <set path="vehicle.multipleItemPurchase#filename" value="xml/horseFood/bulkBox_horseFood.xml" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(1)#price" value="1365" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(2)#price" value="2730" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(3)#price" value="4095" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(4)#price" value="5460" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(5)#price" value="6825" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(6)#price" value="8190" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(7)#price" value="9555" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(8)#price" value="10920" />
            <set path="vehicle.multipleItemPurchaseAmountConfigurations.multipleItemPurchaseAmountConfiguration(9)#price" value="12285" />
        </attributes>
    </parentFile>

    <!-- ONLY FOR ICON GENERATION -->
    <storeData>
        <name>multiBuy bulkBox horseFood</name>
        <image>icons/store_bulkBox_horseFood.dds</image>
        <brand>LIZARD</brand>
        <category>pallets</category>
    </storeData>
</vehicle>
